<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peramdy.dao.dynamic.StudentDao">
    <select id="queryStuInfo" parameterType="java.lang.Integer" resultType="com.peramdy.entity.Student">
        SELECT * FROM  student  s WHERE  s.id=#{id}
    </select>

    <insert id="addStuInfo" parameterType="com.peramdy.entity.Student" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO student (stuName,classId) VALUES(#{stuName},#{classId})
    </insert>

</mapper>